import sqlite3
def createtable(db_file):
    conn = None
    try:
        conn = sqlite3.connect(db_file)
        curs = conn.cursor()
        create = "create table Articles(ID int primary key not null, DOI varchar(50), PubmedID varchar(50), Title varchar(100), PubDate date, Authors varchar(200), Abstract varchar(20000))"
        curs.execute(create)
        curs.close()

    except sqlite3.Error as error:
        print("Error while creating a sqlite table", error)
    finally:
        if conn:
            conn.close()

